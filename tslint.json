{
  "extends": ["@shingo/tslint-rules", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "variable-name":  [true, "allow-leading-underscore", "allow-pascal-case"] 
  }
}
